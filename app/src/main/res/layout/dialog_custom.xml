<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="20sp"
    android:orientation="vertical"
    android:layout_marginRight="20sp"
    android:background="@drawable/bg_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="match_parent"
        android:text="info"
        android:textSize="@dimen/textsize_largetittle"
        android:gravity="center"
        android:textColor="@color/textcolor_body"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:background="@color/textcolor_largetittle"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="info"
            android:padding="@dimen/textsize_largetittle"
            android:textSize="@dimen/textsize_largetittle"
            android:textColor="@color/textcolor_body"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1px"
            android:background="@color/textcolor_largetittle"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="info"
            android:gravity="center"
            android:padding="@dimen/layout_distance"
            android:textSize="@dimen/textsize_largetittle"
            android:textColor="@color/textcolor_body"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

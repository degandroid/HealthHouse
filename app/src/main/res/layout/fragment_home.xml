<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.jkb.enjoyor.healthhouse.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@mipmap/image_indicator_dot_focus"/>

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@mipmap/image_indicator_dot"/>
                <View
                    android:id="@+id/dot_2"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@mipmap/image_indicator_dot"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorBackgroud"
        android:layout_height="@dimen/bar_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="正在开发。。。"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorBackgroud"
        android:layout_height="@dimen/bar_background" />
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="@dimen/layout_distance"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="附近监测点"
        android:textSize="@dimen/textsize_largetittle"
        android:textColor="@color/textcolor_smallittle"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="银江"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/bl_icon_dingwei"
        android:drawablePadding="5dp"
        android:textSize="@dimen/textsize_smalltittle"
        android:textColor="@color/textcolor_body"
        android:layout_height="wrap_content" />

</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorBackgroud"
        android:layout_height="@dimen/bar_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/layout_distance"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="健康咨询"
            android:textSize="@dimen/textsize_largetittle"
            android:textColor="@color/textcolor_smallittle"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="更多资讯"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/bl_icon_information_more"
            android:drawablePadding="5dp"
            android:textSize="@dimen/textsize_smalltittle"
            android:textColor="@color/textcolor_body"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorBackgroud"
        android:layout_height="1px" />


    <ListView
        android:id="@+id/lv_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>

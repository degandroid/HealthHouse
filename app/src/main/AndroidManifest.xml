<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enjoyor.healthhouse" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
        android:name=".MainActivity"
        android:label="@string/app_name" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity android:name=".ui.MainTabActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.LoginActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.ForgetPasswordActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.NewPasswordActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.RegistActivity" android:screenOrientation="portrait"></activity>

        <!--注册自定义广播-->
        <receiver android:name=".receive.MyReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>
